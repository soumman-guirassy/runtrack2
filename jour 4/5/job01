            $nombre_arguments = count($_GET);
            echo "<p>Le nombre d’argument(s) GET envoyé(s) est : <strong>$nombre_arguments</strong></p>";

            echo "<ul>";
            foreach ($_GET as $cle => $valeur) {
                echo "<li><strong>$cle</strong> : $valeur</li>";
