<?php
// Gestion du bouton reset
if (isset($_POST['reset'])) {
    setcookie("nbvisites", 0, time() + 365*24*3600); // Réinitialise à 0
    $nbvisites = 0;
} else {
    // Vérifie si le cookie existe
    if (isset($_COOKIE['nbvisites'])) {
        $nbvisites = $_COOKIE['nbvisites'] + 1;
    } else {
        $nbvisites = 1;
    }

    // Met à jour le cookie (valable 1 an)
    setcookie("nbvisites", $nbvisites, time() + 365*24*3600);
}
?>

<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <title>Compteur avec cookie</title>
</head>
<body>

    <h1>Nombre de visites (cookie) : <?php echo $nbvisites; ?></h1>

    <form method="post">
        <button type="submit" name="reset">Reset</button>
    </form>

</body>
</html>
